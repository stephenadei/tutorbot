            # Extract specific times mentioned
            import re
            time_pattern = r'\b(\d{1,2}):?(\d{2})?\b'
            times = re.findall(time_pattern, preferred_times)
            for hour, minute in times:
                if minute:
                    preferred_time_list.append(f"{hour.zfill(2)}:{minute}")
